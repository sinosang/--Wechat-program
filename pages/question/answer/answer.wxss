.interval{
  width:100%;
  height:20px;
}
.list1{
  width:90%;
  background-color:white;
  text-align:center;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  border-width: 2px;
  position:relative;
  left:5%;
  opacity: 0.9;
}
.name{
  float:left;
  font-size:23px;
  font-weight: bold;
}
.text{
  font-size:20px;
  width:90%;

  border-radius: 5px;
  opacity: 0.6;
}
page{
  background-color:#e3ebe2;
}
.tri{
  position:relative;
  left:5%;
  width:0;
  height:0;
  border-width:10px;
  border-style:solid;
  border-color:  white  transparent transparent white;
  opacity: 0.9;
}
