

page{
  background-color:#CDE0C9;
  display:flex;
  flex-direction:column;
  justify-content:flexstart;
 }
 .head{
   background-color: whitesmoke;
   width:100%;
   border-style: solid;
   border-width: 1px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-color: gray;
 }
 .fah{
   vertical-align: middle;
   position:relative;
    width:150px; 
    height:30px;

  border-width: 1px;
   border-radius: 5px;
   border-color: gray;
   float:left;
 }
 .son{
   float:left;
   font-size: 15px;
   font-weight:normal;
 }
 .son1{
  text-align: center;
   position:relative;
   float:right;
  width:40px;
  bottom:4px;
  height:25px;
  font-size: 15px;
  font-weight:normal;
  color:white;
  border:solid;
  border-radius: 5px;
  border-width: 1px;
  background-color: rgb(158, 158, 190);
 }
 .name{
  font-size:22px;
  font-weight: bold;
}
 .text{
   font-size: 17px;
   font-weight:lighter;
 }
 .interval{
   width:100%;
   height:20px;
 }
 .content{
   border-style:solid;
   border-width:1px;
   border-bottom-left-radius:5px;
   border-bottom-right-radius:5px;
   border-color:gray;
   background-color: white;
   width:100%;
   opacity:0.7;
 }
 .content1{
   display:flex;
   align-items: center;
   justify-content: center;
 }
 #change{
   position: relative;
  margin-top:10px;
   top:10px;
 }
 .title{
   font-size:22px;
   text-align:center;
   font-weight:bold;
   color:whitesmoke;
   text-shadow: 0 0px 5px gray;
 }
 
 
  
 .dot {
   height: 10px;
   width: 10px;
   background-color: rgba(171, 226, 223);
   border-radius: 50%;
 
 }
